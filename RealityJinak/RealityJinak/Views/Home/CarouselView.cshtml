<style>
    #myBasePicture 
    {
        margin-top: 25px;
    }


    #myCarousel 
    { /*outer container, fixed width 640px*/
        /*width: 640px;*/
        overflow: hidden;
        margin: 0 auto;
        color: black;
        padding: 20px;
        text-align: center;
        /*height: 395px;*/
    }

    a.carousel-control 
    { /*the left-right arrows*/
        top: 45%;
        left: 8px;
        width: 40px;
        height: 40px;
        /*margin-top: 0px;*/
        font-size: 48px;
        font-weight: 100;
        line-height: 25px;
        color: #fff;
        text-align: center;
        background-color: #9A9AF9;
        border: 3px solid #fff;
        border-radius: 50%;
        opacity: 0.3;
    }

    a.carousel-control.right 
    {
        right: 0px;
    }

    .carousel-caption 
    { /*override the caption looks*/
        text-align: center;
        background-color: transparent;
        opacity: 0.8;
        transition: opacity 0.3s;
        padding: 20px;
        border-radius: 100px 100px 100px 100px;
        bottom: 60%;
        margin: 0 auto;
        margin-top: 100px;
        right: 30%;
    }

    .carousel-caption h4 
    {
        font-size: 40px;
        margin: 0;
        color: #0045FF;
    }

    .carousel-caption p
    {
        font-size: 20px;
        margin: 0;
        color: #0045FF;
    }

    .item.active:hover > .carousel-caption 
    {
        opacity: 0.8;
    }

    ol.carousel-indicators
    { /*override the dot indicators*/
        top: 10px;
        left: 52px;
        display: inline-block;
        height: 16px;
    }
    
    .carousel-indicators li
    {
        border-color: #888;
        opacity: 0.3;
        border-width: 2px;
        width: 5px;
        height: 5px;
    }
    
    .carousel-indicators li.active 
    {
        width: 7px;
        height: 7px;
    }
    
    .carousel-indicators li:hover 
    {
        opacity: 1;
    }
    </style>


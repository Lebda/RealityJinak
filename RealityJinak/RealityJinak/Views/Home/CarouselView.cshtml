<style>
    #myCarousel { /*outer container, fixed width 640px*/
        /*width: 640px;*/
        overflow: hidden;
        margin: 0px auto;
        color: black;
        padding: 0;
        /*height: 395px;*/
    }

    a.carousel-control { /*the left-right arrows*/
        top: 45%;
        left: 8px;
        width: 40px;
        height: 40px;
        /*margin-top: 0px;*/
        font-size: 48px;
        font-weight: 100;
        line-height: 25px;
        color: #fff;
        text-align: center;
        /*background: #C9C034;*/
        border: 3px solid #fff;
        border-radius: 50%;
        opacity: 0.3;
    }

        a.carousel-control.right {
            right: 0px;
        }

    .carousel-caption { /*override the caption looks*/
        text-align: left;
        background: #111;
        opacity: 0;
        transition: opacity 0.3s;
        padding: 20px;
        border-radius: 20px 20px 0 0;
        bottom: 8px;
    }

        .carousel-caption h4 {
            margin: 0;
            color: red;
        }

    .item.active:hover > .carousel-caption {
        opacity: 0.8;
    }

    ol.carousel-indicators { /*override the dot indicators*/
        top: 10px;
        left: 52px;
        display: inline-block;
        height: 16px;
    }

    .carousel-indicators li {
        border-color: #888;
        opacity: 0.3;
        border-width: 2px;
        width: 5px;
        height: 5px;
    }

        .carousel-indicators li.active {
            width: 7px;
            height: 7px;
        }

        .carousel-indicators li:hover {
            opacity: 1;
        }
</style>
<!-- the entire image slider -->
<div id="myCarousel" class="carousel slide" data-interval="4000">
    <!-- this is the top-left list -->
    <ol class="carousel-indicators">
